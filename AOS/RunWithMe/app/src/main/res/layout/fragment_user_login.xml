<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="userVm"
            type="com.ssafy.runwithme.view.login.UserViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.login.login.UserLoginFragment">

        <TextView
            android:id="@+id/tv_login"
            style="@style/header_text"
            android:layout_marginTop="120dp"
            android:text="로그인"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_btn_login_google"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="64dp"
            android:scaleType="fitXY"
            android:src="@drawable/google_login"
            android:onClick="@{() -> userVm.googleLogin()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_login" />

        <ImageView
            android:id="@+id/img_btn_login_naver"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:scaleType="fitXY"
            android:src="@drawable/naver_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_btn_login_google" />

        <ImageView
            android:id="@+id/img_btn_login_kakao"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:scaleType="fitXY"
            android:src="@drawable/kakao_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_btn_login_naver" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>