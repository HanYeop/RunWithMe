<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_achievement"
                style="@style/header_text"
                android:text="러닝 업적"
                android:textColor="@color/black_high_emphasis"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginHorizontal="18dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image_achieve_num_one"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    app:tint="@color/light_grey"
                    android:src="@drawable/achieve_running_first" />
                <ImageView
                    android:id="@+id/image_achieve_num_ten"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    app:tint="@color/light_grey"
                    android:src="@drawable/achieve_running_ten" />
                <ImageView
                    android:id="@+id/image_achieve_num_hundred"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    app:tint="@color/light_grey"
                    android:src="@drawable/achieve_running_hundred" />
                <ImageView
                    android:id="@+id/image_achieve_num_thousand"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    app:tint="@color/light_grey"
                    android:src="@drawable/achieve_running_thousand" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="첫 러닝"
                    android:textColor="@color/black_high_emphasis"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="10 러닝"
                    android:textColor="@color/black_high_emphasis"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="100 러닝"
                    android:textColor="@color/black_high_emphasis"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1000 러닝"
                    android:textColor="@color/black_high_emphasis"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginHorizontal="18dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image_achieve_time_ten"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:scaleType="centerInside"
                    app:tint="@color/light_grey"
                    android:src="@drawable/achieve_time_ten" />
                <ImageView
                    android:id="@+id/image_achieve_time_hundred"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:scaleType="centerInside"
                    app:tint="@color/light_grey"
                    android:src="@drawable/achieve_time_hundred" />
                <ImageView
                    android:id="@+id/image_achieve_time_thousand"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:scaleType="centerInside"
                    app:tint="@color/light_grey"
                    android:src="@drawable/achieve_time_thousand"/>
                <ImageView
                    android:id="@+id/image_achieve_time_ten_thousand"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:scaleType="centerInside"
                    app:tint="@color/light_grey"
                    android:src="@drawable/achieve_time_ten_thousand" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="10 h"
                    android:textColor="@color/black_high_emphasis"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="100 h"
                    android:textColor="@color/black_high_emphasis"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1000 h"
                    android:textColor="@color/black_high_emphasis"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="10000 h"
                    android:textColor="@color/black_high_emphasis"/>
            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image_achieve_distance_ten"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    app:tint="@color/light_grey"
                    android:src="@drawable/achieve_distance_ten" />
                <ImageView
                    android:id="@+id/image_achieve_distance_hundred"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    app:tint="@color/light_grey"
                    android:src="@drawable/achieve_distance_hundred" />
                <ImageView
                    android:id="@+id/image_achieve_distance_thousand"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    app:tint="@color/light_grey"
                    android:src="@drawable/achieve_distance_thousand" />
                <ImageView
                    android:id="@+id/image_achieve_distance_ten_thousand"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:scaleType="fitCenter"
                    app:tint="@color/light_grey"
                    android:src="@drawable/achieve_distance_ten_thousand" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="10 km"
                    android:textColor="@color/black_high_emphasis"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="100 km"
                    android:textColor="@color/black_high_emphasis"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1000 km"
                    android:textColor="@color/black_high_emphasis"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="10000 km"
                    android:textColor="@color/black_high_emphasis"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_crew_history"
                style="@style/header_text"
                android:text="지난 크루"
                android:textColor="@color/black_high_emphasis"
                android:textSize="20sp"
                android:layout_marginTop="28dp"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_my_crew_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mainColor"
                tools:listitem="@layout/item_my_crew_history" />

        </LinearLayout>

</layout>