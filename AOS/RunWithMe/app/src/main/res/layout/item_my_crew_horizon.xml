<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_crew"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="24dp"
            android:backgroundTint="#F7F7F7"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_card_crew"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_crew"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    tools:src="@drawable/img"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_crew_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/black_high_emphasis"
                    android:fontFamily="@font/noto_sans_bold"
                    android:includeFontPadding="false"
                    tools:text="TSLA"
                    app:layout_constraintEnd_toEndOf="@+id/image_crew"
                    app:layout_constraintStart_toStartOf="@+id/image_crew"
                    app:layout_constraintTop_toBottomOf="@+id/image_crew" />

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/black_medium_emphasis"
                    android:fontFamily="@font/noto_sans_bold"
                    android:includeFontPadding="false"
                    tools:text="09 : 00 ~ 10 : 00"
                    app:layout_constraintEnd_toEndOf="@+id/tv_crew_name"
                    app:layout_constraintStart_toStartOf="@+id/tv_crew_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_crew_name" />

                <ImageButton
                    android:id="@+id/img_btn_start_running"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_round_main_color"
                    android:src="@drawable/run_40"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>