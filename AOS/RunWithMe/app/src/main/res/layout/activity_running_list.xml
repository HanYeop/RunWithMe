<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="scrap"
            type="com.ssafy.runwithme.model.dto.ScrapInfoDto" />
        <variable
            name="runningVm"
            type="com.ssafy.runwithme.view.running.RunningViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".view.running.list.RunningListActivity"
            tools:visibility="visible">

            <com.google.android.gms.maps.MapView
                android:id="@+id/map_view_running_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_two" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_start_btn"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginBottom="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="start_button.json"
                app:lottie_loop="true" />

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:fontFamily="@font/noto_sans_bold"
                android:gravity="center"
                android:text="안녕하세요 "
                android:textColor="@color/main_black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_bold"
                android:gravity="center"
                tools:text="도널드!"
                android:textSize="20sp"
                android:textColor="@color/main_blue"
                app:layout_constraintBottom_toBottomOf="@+id/tv_one"
                app:layout_constraintStart_toEndOf="@+id/tv_one"
                app:layout_constraintTop_toTopOf="@+id/tv_one" />

            <TextView
                android:id="@+id/tv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableEnd="@drawable/left_fire"
                android:fontFamily="@font/noto_sans_bold"
                android:gravity="center"
                android:text="오늘도 달려볼까요?"
                android:textColor="@color/main_black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/tv_one"
                app:layout_constraintTop_toBottomOf="@+id/tv_one" />

            <ImageButton
                android:id="@+id/btn_tts"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_circle_main_color"
                android:padding="8dp"
                android:alpha="0.5"
                app:layout_constraintBottom_toBottomOf="@+id/animation_start_btn"
                app:layout_constraintStart_toEndOf="@+id/animation_start_btn"
                app:layout_constraintTop_toTopOf="@+id/animation_start_btn"
                app:srcCompat="@drawable/voice_24"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btn_scrap"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:alpha="0.5"
                android:background="@drawable/btn_circle_main_color"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/animation_start_btn"
                app:layout_constraintEnd_toStartOf="@+id/animation_start_btn"
                app:layout_constraintTop_toTopOf="@+id/animation_start_btn"
                app:srcCompat="@drawable/bookmark_24"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tv_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text= "날씨"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_nick_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/progress_bar_running_list"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="running.json"
            app:lottie_loop="true" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/header_margin"
            android:layout_marginEnd="@dimen/header_margin"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp"
            android:visibility="gone"
            tools:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_card_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/img_run_record"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/image_round"
                    android:clipToOutline="true"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:runRecordImage="@{scrap.trackBoardFileDto.trackBoardImageFileDto.imgSeq}"
                    tools:srcCompat="@color/main_black" />

                <TextView
                    android:id="@+id/tv_hard_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/noto_sans_bold"
                    android:text="러닝 난이도"
                    android:textColor="@color/main_black"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_envir_point"
                    app:layout_constraintStart_toEndOf="@+id/img_run_record" />

                <com.willy.ratingbar.ScaleRatingBar
                    android:id="@+id/rating_hard"
                    android:layout_width="127dp"
                    android:layout_height="42dp"
                    android:padding="8dp"
                    app:hardPoint="@{scrap.trackBoardFileDto.trackBoardDto.hardPoint}"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_hard_point"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_hard_point"
                    app:layout_constraintTop_toTopOf="@+id/tv_hard_point"
                    app:srb_clickable="false"
                    app:srb_isIndicator="true"
                    app:srb_numStars="5"
                    app:srb_scrollable="true"
                    app:srb_starHeight="18dp"
                    app:srb_starPadding="2dp"
                    app:srb_starWidth="18dp"
                    app:srb_stepSize="1" />

                <TextView
                    android:id="@+id/tv_envir_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="28dp"
                    android:fontFamily="@font/noto_sans_bold"
                    android:text="러닝 환경"
                    android:textColor="@color/main_black"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_hard_point" />

                <com.willy.ratingbar.ScaleRatingBar
                    android:id="@+id/rating_environment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_envir_point"
                    app:layout_constraintEnd_toEndOf="@+id/rating_hard"
                    app:layout_constraintStart_toStartOf="@+id/rating_hard"
                    app:layout_constraintTop_toTopOf="@+id/tv_envir_point"
                    app:srb_clickable="false"
                    app:srb_isIndicator="true"
                    app:srb_numStars="5"
                    app:hardPoint="@{scrap.trackBoardFileDto.trackBoardDto.environmentPoint}"
                    app:srb_scrollable="true"
                    app:srb_starHeight="18dp"
                    app:srb_starPadding="2dp"
                    app:srb_starWidth="18dp"
                    app:srb_stepSize="1" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_bold"
                    android:textColor="@color/main_black"
                    android:textSize="14sp"
                    android:text="@{scrap.title}"
                    tools:text="제목"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/img_run_record"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/img_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/cancel_24" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>