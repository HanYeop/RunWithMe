<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.recommend.RecommendFragment">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextAppearance="@style/tab_text"
            app:tabBackground="@color/white"
            app:tabIndicatorColor="@color/mainColor"
            app:tabTextColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_admin_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지도" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_user_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유저 추천" />

        </com.google.android.material.tabs.TabLayout>

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tab_layout_recommend" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>